<div class="container">
  <div class="row">
　　<div class="col">
      <h3>Follower Users</h3>
      <% if @user.follower.count != 0 %>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @user.following_user.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, size: "60x60", farmat: 'jpg', fallback: "no_image.jpg" %></td>
                <td><%= user.name %></td>
                <td><%= "フォロー数: #{user.follower.count}" %></td>
　　　　　　　  <td><%= "フォロワー数: #{user.followed.count}" %></td>
                <td><%= link_to "Show", user_path(user.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <% else %>
        <%= render 'relationships/notice' %>
      <% end %>
    </div>
  </div>
</div>