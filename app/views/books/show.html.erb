<p id="notice"><%=  notice %></p>
<div>
<% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved: <br>
    <ul>
    　<% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>
<div class="container">
  <div class="row">
　　<div class="col-md-3">
      <%= render 'books/profile', { user: @user, book: @book_new} %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h3>Book detail</h3>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <td>
                <%= link_to attachment_image_tag(@book.user, :profile_image, size: "40x40", farmat: 'jpg', fallback: "no_image.jpg"), user_path(@book.user.id) %>
                <br /><%= link_to @book.user.name, user_path(@book.user.id) %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <td>
              <% if @book.favorited_by?(current_user) %>
                <p>
                  <%= link_to book_favorites_path(@book), method: :delete do %>
                    ♥<%= @book.favorites.count %>
                  <% end %>
                </p>
                <% else %>
                <p>
                  <%= link_to book_favorites_path(@book), method: :post do %>
                    ♡<%= @book.favorites.count %>
                  <% end %>
                </p>
              <% end %>
            </td>
            <% if user_signed_in? && current_user.id == @book.user_id %>
              <<td>
                  <%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-success' %>
                </td>
                <td>
                  <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?", class: 'btn btn-danger'  %>
                </td>
            <% end %>
            <td><%= "コメント数：#{@book.book_comments.count} " %></td>

          </tr>
        </tbody>
      </table>
      <div class="comments">
        <table>
          <tbody>
            <% @book.book_comments.each do |book_comment| %>
              <tr>
                <td>
                  <%= attachment_image_tag book_comment.user, :profile_image, size: "60x60", farmat: 'jpg', fallback: "no_image.jpg" %>
                  <br /><%= link_to book_comment.user.name, user_path(book_comment.user.id) %>
                </td>
                <td><%= book_comment.comment %></td>
                <td>
                  <% if book_comment.user == current_user %>
                    <div class="comment-delete">
                      <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, "data-confirm" => "Are you sure?", class: 'btn btn-danger' %>
                    </div>
                  <% end %>
                </td>
              </tr>
            <% end %>
        </tbody>
        </table>
      </div>
      <div class="new-comment">
        <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
          <%= f.text_area :comment, rows:'5', class:"form-control" %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>