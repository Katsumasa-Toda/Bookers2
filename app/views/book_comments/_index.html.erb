<tr>
  <td>
    <%= attachment_image_tag book_comment.user, :profile_image, size: "60x60", farmat: 'jpg', fallback: "no_image.jpg" %>
    <br /><%= link_to book_comment.user.name, user_path(book_comment.user.id) %>
  </td>
  <td><%= book_comment.comment %></td>
  <td>
    <% if book_comment.user == current_user %>
      <div class="comment-delete">
        <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, "data-confirm" => "Are you sure?", class: 'btn btn-danger' %>
      </div>
    <% end %>
  </td>
</tr>