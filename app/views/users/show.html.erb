<p id="notice"><%=  notice %></p>
<div>
<% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved: <br>
    <ul>
    　<% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>
<div class="container">
  <div class="row">
　　<div class="col-md-3">
      <%= render 'books/profile', user: current_user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h3>Books</h3>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to attachment_image_tag(@user, :profile_image, size: "60x60", farmat: 'jpg', fallback: "no_image.jpg"), user_path(@user.id) %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <% if current_user.id == book.user_id %>
                <td>
                  <%= link_to "Edit", edit_book_path(book.id), class: 'btn btn-success' %>
                </td>
                <td>
                  <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?", class: 'btn btn-danger'  %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
